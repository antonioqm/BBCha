<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antonioqm.bbcha">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".GuestsActivity"
            android:label="Convidados"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".GuestActivity"
            android:label="@string/title_activity_guest"
            android:parentActivityName=".GuestsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.antonioqm.bbcha.GuestsActivity" />
        </activity>
        <activity
            android:name=".GiftsActivity"
            android:label="Presentes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GiftActivity"
            android:label="@string/title_activity_gift"
            android:parentActivityName=".GiftsActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.antonioqm.bbcha.GiftsActivity" />
        </activity>
    </application>

</manifest>